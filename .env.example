# Environment variables for RMS
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require" # Replace with real Render Postgres URL

# JWT secret (generate a strong random string)
JWT_SECRET="replace_with_strong_secret"

# Office 365 SMTP settings
O365_HOST="smtp.office365.com"
O365_PORT="587"
O365_SECURE="false"
O365_USER="your_o365_user@domain.com"
O365_PASS="your_o365_app_password_or_login_password"
MAIL_FROM="RMS Holship <no-reply@holship.com>"
MAIL_BCC="logg@holship.com" # Valgfri intern kopi for hver booking/bruker-epost

# Initial admin seeding (optional). Provide before running npm run seed.
ADMIN_EMAIL="mhe@holship.com"
ADMIN_PASSWORD="Admin!!" # Consider changing this after first login.


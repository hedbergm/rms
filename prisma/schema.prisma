// Prisma schema for RMS
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  role         String    @default("USER") // ADMIN | USER (app-level enum)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  bookings     Booking[]
}

model Booking {
  id         String   @id @default(cuid())
  type       String // LOADING | UNLOADING
  rampNumber Int
  start      DateTime
  end        DateTime
  regNr      String
  company    String
  email      String
  phone      String
  goodsType  String // IFCO | GEN_CARGO
  reference  String? // Referanse / ordrenr
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     String

  @@unique([rampNumber, start])
  @@index([start])
  @@index([rampNumber])
}

// Fleksible stengte tider (helligdag, vedlikehold osv.)
// Hvis startMinute er null => hele dagen for gitt type/ramp (eller alle ramper hvis rampNumber null)
// Hvis rampNumber null => gjelder alle relevante ramper for type (eller begge typer hvis type=BOTH)
model ClosedSlot {
  id              String   @id @default(cuid())
  date            DateTime // Normaliseres til 00:00 lokal tid ved lagring
  type            String // LOADING | UNLOADING | BOTH
  rampNumber      Int? // null = alle ramper
  startMinute     Int? // minutter fra dagsstart (07:00 definisjon i availability brukes til filtrering)
  durationMinutes Int? // lengde, hvis null og startMinute finnes => gjelder resten av dagen
  reason          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([date, type])
  @@index([date, rampNumber])
}
